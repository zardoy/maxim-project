generator client {
  provider = "prisma-client-js"
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

datasource prisma {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Miner {
  id            String  @id @default(cuid())
  model         String
  hashrate      Int
  unit          String
  image         String?
  manufacturer  String
  status        String
  minTradeCount Int
  title         String?
  weight        Int?

  powerConsumption Int
  coolingType      String

  miningCoin      String
  miningAlgorithm String

  isTopMiner Boolean
  openCartId String?

  // logistics
  locationType String?
  // china
  locationCity String?
  deliveryType String

  costPrice Int
  taxes     Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
